<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/hospital_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">

        <!--AMBULANCE SERVICES-->
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_ambulance"
            android:drawableStart="@drawable/ic_ambulance"
            android:textSize="20sp"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_margin="10dp"
            android:text="@string/ambulance_services" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/call_108"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/call_108"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/request_private_ambulance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/request_a_private_ambulance"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/check_ambulance_availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/check_ambulance_availability"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <!--HOSPITAL SERVICES-->
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_hospital"
            android:drawableStart="@drawable/ic_hospital"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_margin="10dp"
            android:text="@string/hospital_services" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/hospital_nearest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_theme"
                android:text="@string/get_to_the_nearest_hospital"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/find_hospitals_nearby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/find_nearby_hospitals"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/hospital_by_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/find_hospitals_by_state"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/hospital_by_specialisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/find_hospitals_by_specialisation"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <!--DOCTOR SERVICES-->
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_doctor"
            android:drawableStart="@drawable/ic_doctor"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_margin="10dp"
            android:text="@string/doctor_services" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/doctor_by_specialisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/find_doctors_by_specialisation"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/request_urgent_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/request_urgent_doctor"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:mrl_rippleColor="@color/colorDisabled"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleRoundedCorners="2dp">

            <TextView
                android:id="@+id/find_doctors_nearby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/white_text_icons"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@drawable/button_style"
                android:text="@string/find_doctors_nearby"
                android:onClick="onButtonClick"/>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

</ScrollView>