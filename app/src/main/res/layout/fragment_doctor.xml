<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/doctor_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:gravity="center_horizontal"
    tools:context="com.prembros.symptomator.DoctorFragment">

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_margin="20dp"
        android:text="@string/doctor_services" />

    <TextView
        android:id="@+id/hospital_by_specialisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/checked_button"
        android:text="@string/find_doctors_by_specialisation"/>

    <TextView
        android:id="@+id/hospital_find_nearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/checked_button"
        android:text="@string/request_urgent_doctor"/>

    <TextView
        android:id="@+id/hospital_by_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="8dp"
        android:textSize="16sp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/checked_button"
        android:text="@string/find_doctors_nearby"/>

</LinearLayout>
